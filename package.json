{
  "name": "pickle",
  "version": "0.1.0",
  "description": "A utility to update a single line in multiple files",
  "main": "index.js",
  "scripts": {
    "lint": "eslint **/*.js --ignore-path .gitignore",
    "devtest": "mocha tests/unit --recursive --reporter spec",
    "test": "istanbul cover --dir ${COVERAGE_DIR:-reports/coverage} -- _mocha tests/unit/* --recursive --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localnerve/pickle.git"
  },
  "keywords": [
    "copyright",
    "multiple",
    "file",
    "line",
    "updater",
    "text"
  ],
  "author": "Alex Grant (@localnerve)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/localnerve/pickle/issues"
  },
  "homepage": "https://github.com/localnerve/pickle#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "eslint-config-defaults": "^8.0.2",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "precommit-hook": "^3.0.0",
    "rimraf": "^2.5.1"
  },
  "pre-commit": [
    "lint",
    "devtest"
  ]
}
